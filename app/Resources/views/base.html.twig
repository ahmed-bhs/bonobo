<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome Bonobo!{% endblock %}</title>
        {% block stylesheets %}
     
          <link rel='stylesheet' id='sweet-alert-css-css'  href="{{asset('app/css/sweet-alert.css')}}" type='text/css' media='all' /> 
            <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="{{asset('app/Bootstrap/dist/css/bootstrap-reboot.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('app/Bootstrap/dist/css/bootstrap.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('app/Bootstrap/dist/css/bootstrap-grid.css')}}">

    <!-- Theme Styles CSS -->
    <link rel="stylesheet" type="text/css" href="{{asset('app/css/theme-styles.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('app/css/blocks.css')}}">

    <!-- Main Font -->
    <script src="{{asset('app/js/webfontloader.min.js')}}"></script>
    <script>
        WebFont.load({
            google: {
                families: ['Roboto:300,400,500,700:latin']
            }
        });
    </script>

    <link rel="stylesheet" type="text/css" href="{{asset('app/css/fonts.css')}}">

    <!-- Styles for plugins -->

 
      
        {% endblock %}
    </head>
<body>


<!-- Header -->

<header class="header" id="site-header">

    <div class="page-title">
        <h6><a href={{path('bonobo_list')}} >BONOBO</a></h6>
    </div>

    <div class="header-content-wrapper">


        <div class="control-block">

            <div class="author-page author vcard inline-items more">
                <div class="author-thumb">

                    {% if app.user.fileName %}<img src="{{asset('app/img/'~ app.user.fileName)}}" width="50" height="50" alt="author">{% else %}
                                <img src="{{asset('app/img/avatar1.jpg')}}" width="50px" height="50px" alt="author">{% endif %}
                     
                    <span class="icon-status online"></span>
                    <div class="more-dropdown more-with-triangle">
                        <div class="mCustomScrollbar" data-mcs-theme="dark">
                            <div class="ui-block-title ui-block-title-small">
                                <h6 class="title">Mon profile</h6>
                            </div>
                            <ul class="account-settings">
                                <li>
                                    <a href="{{path('fos_user_profile_edit')}}">
 <i class="fa fa-pencil-square-o" aria-hidden="true"></i>


                                        <span>Modifer Profile</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{path('fos_user_security_logout')}}">
                                       <i class="fa fa-sign-out" aria-hidden="true"></i>


                                        <span>DÃ©connexion</span>
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
                <a href="#" class="author-name fn">
                    <div class="author-title">
                        {{app.user.username}} <svg class="olymp-dropdown-arrow-icon"><use xlink:href="{{asset('app/icons/icons.svg')}}#olymp-dropdown-arrow-icon"></use></svg>
                    </div>
                    <span class="author-subtitle">{{app.user.name}}</span>
                </a>
            </div>

        </div>
    </div>

</header>

<!-- ... end Header -->



<div class="header-spacer"></div>

<!-- Top Header -->

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="ui-block">
                <div class="top-header">
                    <div class="profile-section">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 ">
                                <ul class="profile-menu"> 

                                    <li>
                                        <a href="{{path('fos_user_profile_show')}}" 
{% if app.request.get('_route') =="fos_user_profile_show" %}class="active"{% endif %}>Profile</a>
                                    </li>
     

                                                                       <li>
                                        <a href="{{path('bonobo_list')}}" 
{% if app.request.get('_route') =="bonobo_list" %}class="active"{% endif %}
                                        >Liste des bonobos ({{ render(controller( 'AppBundle:Bonobo:count'))}}) </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-5 offset-lg-2 col-md-5 offset-md-2">
                                <ul class="profile-menu">
                               <li> 
                                        <a href="{{path('bonobo_friend_list')}}" 
{% if app.request.get('_route') =="bonobo_friend_list" %}class="active"{% endif %}
                                        >Liste d'amis ({{ app.user.friendList | length }})</a>
                                    </li>

                                    <li>
                                        <a href="{{path('fos_user_profile_edit')}}" 
{% if app.request.get('_route') =="fos_user_profile_edit" %}class="active"{% endif %}>Modifer Profile</a>
                                    </li>

                                </ul>
                            </div>
                        </div>


                    </div>
                    <div class="top-header-author">
                        <a href="#" class="author-thumb">

                            {% if app.user.fileName %}<img src="{{asset('app/img/'~app.user.fileName )}}" height="100px" width="100px" alt="author">{% else %}
                            <img src="{{asset('app/img/avatar1.jpg')}}"  alt="author">{% endif %}
                        </a>
                        <div class="author-content">
                            <a href="#" class="h4 author-name">{{app.user.username}}</a>
                            <div class="country">{{app.user.name}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ... end Top Header -->
        {% block body %}{% endblock %}
{% block fos_user_content %}{% endblock %}

        {% block javascripts %}


        <!-- jQuery first, then Other JS. -->
        <script src="{{asset('app/js/jquery-3.2.0.min.js')}}"></script>
        <!-- Js effects for material design. + Tooltips -->
        <script src="{{asset('app/js/material.min.js')}}"></script>
        <!-- Helper scripts (Tabs, Equal height, Scrollbar, etc) -->
        <script src="{{asset('app/js/theme-plugins.js')}}"></script>
   

        <!-- Select / Sorting script -->
        <script src="{{asset('app/js/selectize.min.js')}}"></script>


        <script type='text/javascript' src="{{asset('app/js/sweet-alert.min.js')}}"></script>

        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        <script src="{{ asset('app/js/app.js')}}"></script>

      
        {% endblock %}
    </body>
</html>
