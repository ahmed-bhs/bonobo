{% trans_default_domain 'FOSUserBundle' %}



<!-- Friends -->

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-9  col-md-12 col-sm-12 col-xs-12">
            <div class="ui-block">
                <div class="ui-block-title">
                    <h6 class="title">Personal Information</h6>
                </div>
                <div class="ui-block-content">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
 
 
 
                        <div class="row">

                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group label-floating">
                                    <label class="control-label">Famille</label>
                                   {{ form_widget(form.famille,{'attr':{'class=':'form-control'}}) }}
                                     
                                    <span class="material-input"></span></div>

                                <div class="form-group label-floating">
                                    <label class="control-label">Age</label>
                                      {{ form_widget(form.age,{'attr':{'class=':'form-control'}}) }}
                                    <span class="material-input"></span></div>

                          
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group label-floating">
                                    <label class="control-label">Race</label>
                                  {{ form_widget(form.race,{'attr':{'class=':'form-control'}}) }}
                                    <span class="material-input"></span></div>

                                <div class="form-group label-floating">
                                    <label class="control-label">Nourriture</label>
                                       {{ form_widget(form.nourriture,{'attr':{'class=':'form-control'}}) }}
                                     
                                </div>

                                 
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> {{ form_widget(form.file ) }}

 	</div>
                        
                             
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
     <br>     <br>  
                                    <button class="btn btn-primary btn-lg full-width">Save all Changes</button>

                            </div>

                        </div>
                   {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
</div>